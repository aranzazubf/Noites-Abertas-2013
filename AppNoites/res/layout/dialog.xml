<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fuentes="http://schemas.android.com/apk/res/com.aranzazu.appnoites"
    android:id="@+id/dialog"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog">
      <!--  si falla esta aqui era drawable-->  
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:layout_margin="10dp"
       android:gravity="center"
       android:orientation="vertical">
     <com.aranzazu.appnoites.CustomTextView 
    	fuentes:fuente="Myriad"  
        android:id="@+id/text_d1"
        style="@style/texto_titulo"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"/>
      <com.aranzazu.appnoites.CustomTextView 
    	fuentes:fuente="Myriad"  
        android:id="@+id/text_d2"
        style="@style/texto_normal"
        android:textColor="#efb3ca"
        android:gravity="left"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"/>
     </LinearLayout>
</LinearLayout>