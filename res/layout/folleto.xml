<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    xmlns:fuentes="http://schemas.android.com/apk/res/com.aranzazu.appnoites"
    
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog">

       <com.aranzazu.appnoites.CustomTextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerInParent="false"
           android:layout_marginLeft="10dip"
           android:layout_marginTop="20dp"
           android:layout_weight="0"
           android:gravity="center"
           android:text="@string/folleto1"
           android:textColor="@color/White"
           android:textSize="22sp"
           android:textStyle="bold"
           fuentes:fuente="Myriad" />
  <Button
           android:id="@+id/buttoner"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:layout_margin="10dp"
           android:background="@drawable/down" />

       <com.aranzazu.appnoites.CustomTextView
           android:id="@+id/textView2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginRight="30dp"
           android:layout_toRightOf="@id/buttoner"
           android:layout_weight="0"
           android:gravity="center"
           android:text="@string/folleto2"
           android:textColor="#FF0066"
           android:textSize="18sp"
           android:textStyle="bold"
           fuentes:fuente="Myriad" />
    
</RelativeLayout>